{
	"extends": ["../../.eslintrc.json", "../../.eslintrc.angular.json"],
	"ignorePatterns": ["!**/*"],
	"overrides": [
		{
			"files": ["*.ts"],
			"rules": {
				"@angular-eslint/directive-selector": [
					"error",
					{
						"type": "attribute",
						"prefix": "kordis",
						"style": "camelCase"
					}
				],
				"@angular-eslint/component-selector": [
					"error",
					{
						"type": "element",
						"prefix": "kordis",
						"style": "kebab-case"
					}
				]
			},
			"extends": [
				"plugin:@nx/angular",
				"plugin:@angular-eslint/template/process-inline-templates"
			]
		},
		{
			"files": ["*.html"],
			"extends": ["plugin:@nx/angular-template"],
			"rules": {}
		},
		{
			"files": ["*.d.ts"],
			"rules": {
				"no-var": "off"
			}
		}
	]
}
