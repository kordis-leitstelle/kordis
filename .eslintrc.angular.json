{
	"overrides": [
		{
			"parserOptions": {
				"project": ["./tsconfig*.json"]
			},
			"files": ["*.ts"],
			"extends": ["plugin:@smarttools/rxjs/recommended-legacy"],
			"rules": {
				"@smarttools/rxjs/finnish": "error",
				"@smarttools/rxjs/no-exposed-subjects": "error",
				"@smarttools/rxjs/no-subject-value": "error",
				"@smarttools/rxjs/suffix-subjects": "error",
				"@smarttools/rxjs/no-implicit-any-catch": "warn"
			}
		}
	]
}
