{
	"singleQuote": true,
	"semi": true,
	"trailingComma": "all",
	"printWidth": 80,
	"overrides": [
		{
			"files": ["*.ts"],
			"options": {
				"parser": "typescript",
				"importOrder": ["^@kordis/(.*)$", "^[./]"],
				"importOrderSeparation": true,
				"importOrderSortSpecifiers": true,
				"importOrderParserPlugins": [
					"classProperties",
					"decorators-legacy",
					"typescript"
				]
			}
		}
	]
}
