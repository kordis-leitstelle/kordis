{
	"singleQuote": true,
	"semi": true,
	"trailingComma": "all",
	"printWidth": 80,
	"proseWrap": "always",
	"overrides": [
		{
			"files": ["*.ts"],
			"options": {
				"parser": "typescript",
				"importOrder": ["^@kordis/(.*)$", "^[./]"],
				"importOrderSeparation": true,
				"importOrderSortSpecifiers": true,
				"importOrderParserPlugins": [
					"explicitResourceManagement",
					"classProperties",
					"decorators-legacy",
					"typescript"
				]
			}
		}
	],
	"plugins": ["@trivago/prettier-plugin-sort-imports"]
}
